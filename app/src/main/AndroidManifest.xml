<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackComposeAndroidTutorial"
        tools:targetApi="31">
        <activity
            android:name=".layout.RowActivity"
            android:exported="false"
            android:label="@string/title_activity_row"
            android:theme="@style/Theme.JetpackComposeAndroidTutorial" />
        <activity
            android:name=".layout.LazyRowActivity"
            android:exported="false"
            android:label="@string/title_activity_lazy_row"
            android:theme="@style/Theme.JetpackComposeAndroidTutorial" />
        <activity
            android:name=".layout.LazyColumnActivity"
            android:exported="false"
            android:label="@string/title_activity_lazy_column"
            android:theme="@style/Theme.JetpackComposeAndroidTutorial" />
        <activity
            android:name=".layout.ConstraintActivity"
            android:exported="false"
            android:label="@string/title_activity_constraint"
            android:theme="@style/Theme.JetpackComposeAndroidTutorial" />
        <activity
            android:name=".layout.BoxActivity"
            android:exported="false"
            android:label="@string/title_activity_box"
            android:theme="@style/Theme.JetpackComposeAndroidTutorial" />
        <activity
            android:name=".layout.ColumnActivity"
            android:exported="false"
            android:label="@string/title_activity_column"
            android:theme="@style/Theme.JetpackComposeAndroidTutorial" />
        <activity
            android:name=".text.EditTextActivity"
            android:exported="false"
            android:label="@string/title_activity_edit_text"
            android:theme="@style/Theme.JetpackComposeAndroidTutorial" />
        <activity
            android:name=".text.TextStyleActivity"
            android:exported="false"
            android:label="@string/title_activity_text_style"
            android:theme="@style/Theme.JetpackComposeAndroidTutorial" />
        <activity
            android:name=".text.TextActivity"
            android:exported="false"
            android:label="@string/title_activity_text"
            android:theme="@style/Theme.JetpackComposeAndroidTutorial" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.JetpackComposeAndroidTutorial">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>